<Window x:Class="talk_control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:talk_control"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="370" Loaded="Window_Loaded" Background="#FFBBBBBB" AllowsTransparency="True" WindowStyle="None"  ShowInTaskbar="False" ResizeMode="NoResize" Topmost="True">
    <Grid>
        <Border BorderBrush="#FF322CB4" BorderThickness="1" HorizontalAlignment="Left" Height="550" VerticalAlignment="Top" Width="370"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" KeyDown="textBox_KeyDown" Height="45" Margin="0,505,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="325" FontSize="21.333"/>
        <Label x:Name="sumbit" Content=">" MouseLeftButtonDown="sumbit_MouseLeftButtonDown" HorizontalAlignment="Left" Height="45" Margin="325,505,0,0" VerticalAlignment="Top" Width="45" Background="#FFE8D6D6" BorderBrush="#FF265AE6" FontSize="24"/>
        <Label x:Name="source" HorizontalAlignment="Left" Height="153" Margin="6,54,0,0" VerticalAlignment="Top" Width="360">
            <TextBlock x:Name="source_text" Text="好久不见啦" TextWrapping="Wrap" FontSize="18.667" />
        </Label>


    </Grid>
</Window>
