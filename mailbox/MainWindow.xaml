<Window x:Class="mailbox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mailbox"
        mc:Ignorable="d"
        Title="MailBox" Height="350" Width="525">
    <Grid>
        <TextBox x:Name="mail_address" HorizontalAlignment="Left" Height="23" Margin="186,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="290"/>
        <TextBox x:Name="mail_password" HorizontalAlignment="Left" Height="23" Margin="186,74,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="290"/>
        <Label x:Name="mail_address_label" Content="邮箱账户" HorizontalAlignment="Left" Height="23" Margin="56,26,0,0" VerticalAlignment="Top" Width="112"/>
        <Label x:Name="mail_password_label" Content="邮箱密码" HorizontalAlignment="Left" Height="23" Margin="56,74,0,0" VerticalAlignment="Top" Width="84"/>
        <Button x:Name="mail_ok" Content="确认" HorizontalAlignment="Left" Height="40" Margin="356,254,0,0" VerticalAlignment="Top" Width="120" Click="mail_ok_Click"/>

    </Grid>
</Window>
