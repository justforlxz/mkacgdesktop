<Window x:Class="mkacg_music.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:mkacg_music"
        
        mc:Ignorable="d" 
        Title="MainWindow" Height="450" Width="750" Background="{x:Null}" Foreground="{x:Null}" AllowsTransparency="True" WindowStyle="None">
    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown" Margin="0,0,0,0" Background="#F3EEDFDF">
        <Grid HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="124" Background="#FFFD1D1D">
            <Slider x:Name="slider" HorizontalAlignment="Left" Height="21" Margin="10,379,0,0" VerticalAlignment="Top" Width="104"/>
        </Grid>
        <Grid x:Name="play_list" HorizontalAlignment="Left" Height="450" Margin="124,0,0,0" VerticalAlignment="Top" Width="626" Background="#FF59CBE4"/>
        <MediaElement x:Name="mediaElement" HorizontalAlignment="Left" Height="79" Margin="505,61,0,0" VerticalAlignment="Top" Width="169"/>
        <Button x:Name="button" Content="Button" Click="button_Click" HorizontalAlignment="Left" Height="34" Margin="0,61,0,0" VerticalAlignment="Top" Width="124"/>

    </Grid>
</Window>
