        xmlns:local="clr-namespace:mkacg"
        mc:Ignorable="d"
        Title="Redio_window" Height="93.895" Width="285.881" Loaded="Window_Loaded" Background="{x:Null}" AllowsTransparency="True" WindowStyle="None">
